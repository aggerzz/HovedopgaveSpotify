<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Jukebox by Jurijz & Aggerzz</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="@Url.Content("~/Styles/main.css")" rel="stylesheet" type="text/css" />
    <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
    @RenderSection("Styles", false)
</head>
<body>
  
    <div class="navbar fixed-top">
        <h1>Spotify hovedopgave &copy;</h1>
        <p>By Jurijs & Christoffer</p>
    </div>
        <ul class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")"><span class="icon icon-home"></span></a>
            </li>
            @*TODO: hide Playlist from Home (make breadcrumb responsive)*@
            <li>Playlist</li>
        </ul>
    
    <div class="container body-content">
        @RenderBody()

        <footer class="modal-footer stick-bottom">
            <p>&copy; @DateTime.Now.Year - <a href="">Hovedopgave</a> by Jurijs & Christoffer</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
