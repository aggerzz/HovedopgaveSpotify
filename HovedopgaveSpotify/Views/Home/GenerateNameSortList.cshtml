@model IList<String>

@{
    ViewBag.Title = "GenerateNameSortList";
}

<script type="text/javascript" language="javascript">
    var hashes = window.location.hash;
    hashes = hashes.replace('#', '?');
    if(hashes !== "")
        window.location = hashes;    
</script>

<h2>@ViewBag.UserName esta é sua nova PlayList</h2>

<table id="Grid" class="table table-striped table-bordered table-hover table-condensed">
    <thead>
        <tr>
            <th>
                
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            int count = 0;
            string userName = ViewBag.UserName.ToString().Replace(" ", "");

            foreach (var item in @Model)
            {
                <tr>
                    <td>
                        @userName[count++]
                    </td>
                    <td>
                        @item
                    </td>
                </tr>
            }
        }        
    </tbody>
</table>
